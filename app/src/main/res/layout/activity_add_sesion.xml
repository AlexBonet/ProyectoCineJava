<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSesionActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Añadir una sesión"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addSbtnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="VOLVER"
        app:layout_constraintEnd_toEndOf="@+id/addSbtnAdd"
        app:layout_constraintStart_toStartOf="@+id/addSbtnAdd"
        app:layout_constraintTop_toBottomOf="@+id/addSbtnAdd" />

    <Button
        android:id="@+id/addSbtnAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="AÑADIR"
        app:layout_constraintEnd_toEndOf="@+id/addSinputHora"
        app:layout_constraintStart_toStartOf="@+id/addSinputHora"
        app:layout_constraintTop_toBottomOf="@+id/addSinputHora" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Película: "
        app:layout_constraintBottom_toTopOf="@+id/spinnerPelis"
        app:layout_constraintStart_toStartOf="@+id/spinnerPelis" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sala: "
        app:layout_constraintBottom_toTopOf="@+id/spinnerSala"
        app:layout_constraintStart_toStartOf="@+id/spinnerSala" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora: "
        app:layout_constraintBottom_toTopOf="@+id/addSinputHora"
        app:layout_constraintStart_toStartOf="@+id/addSinputHora" />

    <EditText
        android:id="@+id/addSinputHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerPelis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerSala"
        app:layout_constraintEnd_toEndOf="@+id/addSinputHora"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addSinputHora" />

    <Spinner
        android:id="@+id/spinnerSala"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/addSinputHora"
        app:layout_constraintEnd_toEndOf="@+id/addSinputHora"
        app:layout_constraintStart_toStartOf="@+id/addSinputHora" />

</androidx.constraintlayout.widget.ConstraintLayout>