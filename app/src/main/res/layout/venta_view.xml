<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Numero de venta:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="777"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/vv1"
        app:layout_constraintStart_toStartOf="@+id/vv1"
        app:layout_constraintTop_toBottomOf="@+id/vv1" />

    <TextView
        android:id="@+id/vv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Vendida por:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Fecha de la venta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vvVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUTOSERVICIO"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/vvNum"
        app:layout_constraintEnd_toEndOf="@+id/vv2"
        app:layout_constraintStart_toStartOf="@+id/vv2"
        app:layout_constraintTop_toBottomOf="@+id/vv1" />

    <TextView
        android:id="@+id/vvFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fri Dec 17 16:07:15 GMT 2021 "
        app:layout_constraintBottom_toBottomOf="@+id/vvNum"
        app:layout_constraintEnd_toEndOf="@+id/vv3"
        app:layout_constraintStart_toStartOf="@+id/vv3"
        app:layout_constraintTop_toBottomOf="@+id/vv1" />

    <TextView
        android:id="@+id/vvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="11â‚¬"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vvNum" />
</androidx.constraintlayout.widget.ConstraintLayout>